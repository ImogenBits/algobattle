[flake8]
count = True
show_source = True
statistics = True
max_complexity = 10
max_line_length = 127
per_file_ignores = 
    __init__.py: F401, D104
    setup.py: D102, D100, D104
    */problems/*/problem.py: D102
    tests/*: D102
    tests/__init__.py: D104
docstring_convention = numpy
ignore = D105, D401, E203
exclude =
    .git,
    __pycache__,
    algobattle/old_problem.py
ignore_decorators=inherit_docs