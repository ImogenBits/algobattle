[flake8]
count = True
show_source = True
statistics = True
max_line_length = 127
per_file_ignores = 
    __init__.py: F401, D104
    setup.py: D102, D100, D104
    fight_handler.py: E221
    tests/*: D102
    tests/__init__.py: D104
    battle.py: E501, C901
docstring_convention = numpy
ignore = D105, D401, E203, E302
exclude =
    .git,
    __pycache__,
    algobattle/problems/*
ignore_decorators=inherit_docs